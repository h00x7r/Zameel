{
  "start": "/opt/nvm/versions/node/v14/bin/node server.js",
  "install": "/opt/nvm/versions/node/v14/bin/npm install",
  "watch": {
    "ignore": [
      "node_modules",
      ".git"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 1000
  }
}
