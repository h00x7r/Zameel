{
  "install": "npm install",
  "start": "npm start",
  "watch": {
    "install": {
      "include": [
        "^package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json"
      ],
      "exclude": [
        "package\\.json"
      ]
    },
    "throttle": 1000
  }
}
