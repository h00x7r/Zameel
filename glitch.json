{
  "install": {
    "include": [
      "^package\\.json$",
      "^\\.env$"
    ]
  },
  "start": "npm start",
  "watch": {
    "ignore": [
      "node_modules",
      ".git"
    ],
    "restart": {
      "exclude": [
        "^public/",
        "^dist/"
      ],
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 1000
  }
}
