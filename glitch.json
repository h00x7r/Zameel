{
  "install": "pnpm install",
  "start": "node server.js",
  "watch": {
    "ignore": [
      "node_modules",
      ".git"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 1000
  }
}
