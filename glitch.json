{
  "start": ". ~/.nvm/nvm.sh && nvm use && npm start",
  "install": ". ~/.nvm/nvm.sh && nvm use && npm install",
  "watch": {
    "ignore": [
      "node_modules",
      ".git"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 1000
  }
}
